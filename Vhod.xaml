<Window x:Class="Barhatnie_Brovki.Vhod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Barhatnie_Brovki"
        mc:Ignorable="d"
        Title="Вход" Height="380" Width="800">
    <Grid Background="#e1e4ff" Height="806" VerticalAlignment="Top">
        <TextBlock Text="Вход в приложение" FontSize="20" FontFamily="Tahoma"  FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,746"/>
        <TextBlock Text="Гостевой пароль 1234" FontSize="20" FontFamily="Tahoma"  FontWeight="Bold" HorizontalAlignment="Center" Margin="0,43,0,683"/>
        <Label  Content="password" Margin="36,102,648,633" FontFamily="Tahoma" FontSize="19" FontWeight="Bold"/>

        <PasswordBox x:Name="passwordBox" Width="auto" Height="50" MaxLength="16"
             PasswordChanged="passwordBox_PasswordChanged" Margin="157,90,36,633"/>



        <Button Background="#ff4a6d" Width="auto"  Content="Вход" FontSize="25" FontFamily="Tahoma" Click="Login" Margin="0,170,0,582"/>
        <Button Background="LightGray" Height="53" Width="auto" Content="Выход"  FontSize="25" FontFamily="Tahoma" Click="LogOut" VerticalAlignment="Top" Margin="0,282,0,0"/>

    </Grid>
</Window>
